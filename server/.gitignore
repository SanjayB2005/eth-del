# Server-specific .gitignore

# Environment files with sensitive data
.env*
.ENV*
*.env

# Dependencies
/node_modules
/.pnp
.pnp.*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*
.pnpm-debug.log*

# Coverage directory
coverage/
*.lcov

# nyc test coverage  
.nyc_output

# Build outputs
/build
/dist

# Cache directories
.cache/
.npm

# Optional eslint cache
.eslintcache

# Temporary folders
tmp/
temp/

# File uploads
uploads/

# Sessions
sessions/

# Database files
*.db
*.sqlite
*.sqlite3

# Private keys and wallets (CRITICAL SECURITY)
*.key
*.pem
*.p12
*.pfx
wallet.json
keystore/
keys/

# Development and test files
test-*.js
debug-*.js
*-test-*.js
demo-*.js
example-*.js

# Generated files
get-*.js
setup-*.js
retry-*.js

# Deployment artifacts  
deployment-*.json

# macOS
.DS_Store

# Windows
Thumbs.db
